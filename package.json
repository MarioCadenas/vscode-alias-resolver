{
  "name": "alias-resolver",
  "displayName": "alias-resolver",
  "description": "Automatically resolve webpack aliases",
  "publisher": "mariocadenas",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MarioCadenas/vscode-alias-resolver.git"
  },
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "alias-resolver",
      "type": "object",
      "properties": {
        "file": {
          "type": "string",
          "default": "",
          "description": "File with alias mappings such as webpack.js or rollup.config.js"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --ext .js --fix",
      "prettier --write"
    ]
  },
  "release": {
    "branches": "master",
    "verifyConditions": [
      "@semantic-release/github"
    ],
    "publish": [
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/github": "^7.1.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^7.1.1",
    "prettier": "2.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "acorn": "^7.1.1",
    "acorn-walk": "^7.1.1"
  }
}
